<h1><%= "this is the item partial" %></h1>

<div class="span8">
  <% @items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <button type="button" class="btn btn-default btn-lg display-inline-right" id="<%=item.id %>">
            <%= link_to item.name, [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok' , data: {confirm: 'Are you sure?', remote: true} %>
            </button>
          </h4>
          <div class="text-center-small">
              <%= item.days_left.to_s. + " days left to complete"  %>
          </div>
          <hr>
        </div>
      </div>
  <% end %>
</div>


