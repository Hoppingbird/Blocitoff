
<div class="span8">
  <% @items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <button type="button" class="btn btn-default btn-lg display-inline-right" id="<%=item.id %>">
            <%= link_to item.name, [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok' , data: {confirm: 'Are you sure you want to delete this task?', remote: true} %>
              <div class="text-center-small">
                <%= item.days_left.to_s. + " days left to complete"  %>
              </div>
            </button>
          </h4>
        </div>
      </div>
  <% end %>
</div>


