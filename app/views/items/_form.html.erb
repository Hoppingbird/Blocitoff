<h2><%= "this is the form partial" %></h2>

<% if current_user %>
    <%= form_for [current_user, Item.new], remote: true do |f| %>
      <div class='form-group'>
        <%= f.label :Item %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Add a new item.' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
<% end %>